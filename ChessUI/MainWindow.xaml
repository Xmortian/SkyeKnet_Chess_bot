<Window x:Class="ChessUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Title="Chess" 
        Width="1100"
        Height="700"
        MinWidth="950"
        MinHeight="650"
        Icon="Assets/icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="#2F2F2F">

    <Grid>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="20">

            <!-- Clock Panel (Left) -->
            <StackPanel Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="White"
                           FontSize="32"
                           FontWeight="Bold"
                           FontFamily="Segoe UI"    
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="-60,0,0,5"/>
                <TextBlock x:Name="WhiteClockText"
                           Text="10:00"
                           FontSize="44"
                           FontWeight="SemiBold"
                           Foreground="#C5B358"
                           HorizontalAlignment="Center"
                           Margin="-60,0,0,30"/>

                <TextBlock Text="Black"
                           FontSize="36"
                           FontFamily="Segoe UI"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="-60,0,0,5"/>
                <TextBlock x:Name="BlackClockText"
                           Text="10:00"
                           FontSize="44"
                           FontWeight="SemiBold"
                           Foreground="#C5B358"
                           HorizontalAlignment="Center"
                           Margin="-60,0,0,5"/>
            </StackPanel>

            <!-- Chess Board Container -->
            <Viewbox MaxWidth="600" MaxHeight="600">
                <Grid x:Name="MainContainer">
                    <Grid x:Name="BoardGrid"
                          Width="600"
                          Height="600"
                          MouseDown="BoardGrid_MouseDown">

                        <Grid.Background>
                            <ImageBrush ImageSource="Assets/Board.png"/>
                        </Grid.Background>

                        <UniformGrid x:Name="HighlightGrid" Rows="8" Columns="8"/>
                        <UniformGrid x:Name="PieceGrid" Rows="8" Columns="8" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>

                    <!-- Promotion Menu Container -->
                    <ContentControl x:Name="MenuContainer"
                                    Width="400"
                                    Height="200"
                                    Panel.ZIndex="100"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                        <ContentControl.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="#80000000"/>
                        </ContentControl.Effect>
                    </ContentControl>
                </Grid>
            </Viewbox>

            <!-- Bot Info Panel (Top Right) -->
            <Border Margin="20,0,0,0"
        BorderBrush="#FFD700"
        BorderThickness="4"
        CornerRadius="9"
        Background="#202020"
        Padding="10"
        VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="3" Color="#80000000"/>
                </Border.Effect>

                <StackPanel HorizontalAlignment="Center">
                    <!-- Bot Name -->
                    <TextBlock Text="SkyeKnet"
                   Foreground="#C5B358" 
                   FontFamily="Segoe UI" 
                   FontSize="18"
                   FontWeight="DemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"
                   Typography.Capitals="SmallCaps"
                   Typography.NumeralStyle="OldStyle"
                   TextOptions.TextFormattingMode="Display">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="6" ShadowDepth="3" Color="#40000000" Direction="270"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Bot Display Picture -->
                    <Image Source="C:\Users\USER\Desktop\Assets/Chess_bot_dp.png" 
               Width="170"
               Height="225"
               RenderOptions.BitmapScalingMode="HighQuality"
               HorizontalAlignment="Center">
                        <Image.Clip>
                            <RectangleGeometry Rect="0,25,150,125"/>
                        </Image.Clip>
                    </Image>

                    <!-- Bot Dialogue Text (Below Image) -->
                    <Border Background="#303030"
                CornerRadius="5"
                Padding="8"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Width="180">
                        <TextBlock x:Name="BotDialogueText"
                       Text=""
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="White"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
